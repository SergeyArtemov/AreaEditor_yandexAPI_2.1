var
 ind  : integer;
 strl : TStringList;
begin
Result:='';
try
ind:=GetDateIndex(aDate);
if ind=-1
   then begin
   strl:=TStringList.Create;
   try
   if not GetForDate(aDate, ind, strl) then Exit;
   finally
   FreeStringList(strl);
   end;
   end;
Result:=Items[ind].GetDriver(aCar);
